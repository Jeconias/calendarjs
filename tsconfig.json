{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src/*": ["./src*"],
      "@components/*": ["./src/components/*"],
      "@core/*": ["./src/core/*"],
      "@public/*": ["public/*"]
    }
  },
  "exclude": ["./node_modules/**/*"],
  "include": ["./src"]
}
